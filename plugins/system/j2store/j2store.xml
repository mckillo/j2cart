<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
  <name>System - J2Store</name>
  <creationDate>Jan 2012</creationDate>
  <author>J2Commerce</author>
  <authorEmail>support@j2commerce.org</authorEmail>
  <authorUrl>https://www.j2commerce.org</authorUrl>
  <copyright>2025 J2Commerce, LLC</copyright>
  <license>GNU General Public License v3 or later</license>
  <version>4.0.11</version>
  <description>System plugin that loads the required Javascript and other files required for J2Store.</description>
  <files>
    <filename plugin="j2store">j2store.php</filename>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field
          name="is_change_filter_input"
          type="radio"
          label="J2STORE_CHANGE_FILTER_INPUT_FIELD"
          default="1"
          layout="joomla.form.field.radio.switcher"
          >
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
